<%- include('partials/shared/html-open.ejs'); %>
<%- include('partials/globals/header.ejs'); %>

<main>
    <h1>
        <%= data.firstname %>
    </h1>
    <p>
        <%= data.location %>
    </p>
    <form action="/other-profile-match" method="POST"> %>
        <button name="unmatch" type="submit" value="<%=data._id%>">unmatch</button>
    </form>
    <section>
        <section>
            <article>
                <img src="<%= data.avatar %>" alt="Profile photo">
            </article>
        </section>

        <h3>Persoonlijke info</h3>
        <article class="personalInformation">
            <div>
                <dl>
                    <dt>First name </dt>
                    <dd>
                        <%= data.firstname %>
                    </dd>
                    <dt>Last name </dt>
                    <dd>
                        <%= data.lastname %>
                    </dd>
                    <dt>Profile name </dt>
                    <dd>
                        <%= data.username %>
                    </dd>
                    <dt>Age</dt>
                    <dd>
                        <%= data.age %>
                    </dd>
                    <dt>Location</dt>
                    <dd>
                        <%= data.location %>
                    </dd>
                    <dt>Interests</dt>
                    <dd>
                        <%= data.interests %>
                    </dd>
                    <dt>About me</dt>
                    <dd>
                        <%= data.description %>
                    </dd>
                </dl>
            </div>
        </article>
    </section>
</main>

<%- include('partials/globals/footer.ejs'); %>
<%- include('partials/shared/html-close.ejs'); %>